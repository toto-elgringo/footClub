{% extends 'layouts/base.twig' %}

{% block title %}Tableau de bord - Foot Club{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="../css/index.css">
{% endblock %}

{% block content %}
    <div class="header">
        <div class="page-title">
            <div>
                <h1>Tableau de bord</h1>
                <p>Vue d'ensemble de votre club de Football</p>
            </div>
        </div>
    </div>

    <div class="dashboard">
        <div class="dashboard-section joueurs">
            <div class="dashboard-section-icon">
                👤
            </div>
            <div class="number-jouers">
                {{ players|length }} {#la fonction | permet de compter le nombre d'elements dans un tableau#}
            </div>
            <div class="dashboard-section-title">
                Total de jouers
            </div>
        </div>
        <div class="dashboard-section equipe">
            <div class="dashboard-section-icon">
                🛡️
            </div>
            <div class="number-equipes">
                {{ teams|length }}
            </div>
            <div class="dashboard-section-title">
                Nombre d'équipes
            </div>
        </div>

        <div class="dashboard-section matchs">
            <div class="dashboard-section-icon">
                🧑‍💼
            </div>
            <div class="number-matchs">
                {# compléter avec les données des matchs, il faut que je le fasse #}
            </div>
            <div class="dashboard-section-title">
                Match ce mois ci
            </div>
        </div>

        <div class="dashboard-section victoires">
            <div class="dashboard-section-icon">
                📅
            </div>
            <div class="number-victoires">
                {# compléter avec les données des victoires #}
            </div>
            <div class="dashboard-section-title">
                Victoires
            </div>
        </div>

        <div class="dashboard-section match-recent">
            <div class="dashboard-section-title">
                Match recents
            </div>
            <div class="section-data">
                <ul>
                </ul>
            </div>
        </div>

        <div class="dashboard-section match-prochain">
            <div class="dashboard-section-title">
                Prochains match
            </div>
            <div class="section-data">
                <ul>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
